
(set-language-environment "UTF-8")

(setq c-default-style "bsd")

;; On retire le troncage des lignes
; (setq truncate-partial-width-windows nil)

;; Modification du comportement du buffer (Ex. Liste des fichier dans C-x C-f)
(ido-mode 1)

;; Pas d'autosaves, et garder les backups dans un dossier à part
(setq auto-save-default nil)
(defvar backup-dir "~/.emacs.d/backups/")
(setq backup-directory-alist (list (cons "." backup-dir)))

;; la roue de la souris fait défiler beaucoup trop vite
(setq mouse-wheel-scroll-amount '(1))
(setq mouse-wheel-progressive-speed nil)

;; On empêche le curseur de clignoter
 (blink-cursor-mode 0)

;; Mettre un titre aux fenetres
 (setq frame-title-format '(buffer-file-name "Emacs: %b (%f)" "Emacs: %b"))

;; Afficher le numero de ligne et de colonne
 (column-number-mode 1)
 (line-number-mode 1)

;; On supprime la barre de menu, la toolbar et la barre de scroll
;;(tool-bar-mode -1)
(scroll-bar-mode -1)
(menu-bar-mode -1)

;; Colorisation syntaxique maximale dans tous les modes
(require 'font-lock)
(global-font-lock-mode t)
(setq font-lock-maximum-decoration t)

;; Mettre un maximum de couleurs
(setq font-lock-maximum-size nil)

;; Mettre deux espaces pour l'indentation
(setq indent-tabs-mode nil)
(setq standard-indent 2)
(setq tab-width 8)
(setq c-basic-offset 2)

;; Les 'beep' deviennent visibles (et non plus audibles)
(setq visible-bell t)

;; Remplace « yes » par « y » et « no » par « n » pour les confirmations
(fset 'yes-or-no-p 'y-or-n-p)

;; Supprimer les fichiers de sauvegarde en quittant.
;; (vous savez, ces fameux fichiers dont le nom se termine par « ~ »)
(setq make-backup-files nil)

;; Montrer la correspondance des parenthèses (systématiquement et non
;; seulement après la frappe)
(require 'paren)
(show-paren-mode t)
(setq blink-matching-paren t)
(setq blink-matching-paren-on-screen t)
(setq show-paren-style 'expression)
(setq blink-matching-paren-dont-ignore-comments t)

;; Ajouter un saut de ligne final lorsqu'il est absent
(setq require-final-newline t)

;; Retire les espace superflux en fin de ligne
(add-hook 'write-file-hooks 'delete-trailing-whitespace)

;; Lorsque le curseur atteint la fin de la fenêtre, le contenu se
;; déplace d'une seule ligne et non d'une demi-fenêtre.
(setq scroll-step 1)

;; Lors d'un « copier-coller » à la souris, insérer le texte au niveau
;; du point cliqué et non à la position du curseur texte.
;(setq mouse-yank-at-point nil)

;; Complétion automatique
(abbrev-mode t)

;; Effacer le message d’accueil
(setq inhibit-startup-message t)

;; Facilite la recherche de buffer (C-x b)
(iswitchb-mode t)

